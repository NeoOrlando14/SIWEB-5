generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Produk {
  id        Int         @id @default(autoincrement())
  nama      String
  transaksi Transaksi[]
}

model Transaksi {
  id           Int      @id @default(autoincrement())
  produkId     Int
  produk       Produk   @relation(fields: [produkId], references: [id])
  nama_pembeli String
  tanggal      DateTime @default(now())
  total_harga  Int
}
