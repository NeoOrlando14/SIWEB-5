generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produk {
  id        Int         @id @default(autoincrement())
  nama      String
  harga     Int         @default(0)
  image     String      @default("default.jpg")
  rating    Int         @default(5)
  reviews   Int         @default(0)
  stok      Int         @default(0)
  transaksi Transaksi[]
}

model Transaksi {
  id              Int      @id @default(autoincrement())
  produkId        Int
  nama_pembeli    String
  userId          Int?
  tanggal         DateTime @default(now())
  total_harga     Int
  poin_dipakai    Int      @default(0)
  diskon_poin     Int      @default(0)
  harga_akhir     Int?
  bulk_payment_id String?
  poin_deducted   Boolean  @default(false)
  status          String?  @default("pending")
  produk          Produk   @relation(fields: [produkId], references: [id], onDelete: Cascade)
}

model Member {
  firstName String
  lastName  String
  email     String
  phone     String
  position  String
  address   String
  gender    String
  id        Int    @id @default(autoincrement())
}

model users {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  phone    String?
  dob      DateTime? @db.Date
  role     String?   @default("customer")
  poin     Int       @default(0)
}

model Customer {
  id        Int      @id @default(autoincrement())
  nama      String
  telepon   String
  poin      Int      @default(0)
  createdAt DateTime @default(now())
  poinLog   Poin[]
}

model Poin {
  id         Int      @id @default(autoincrement())
  customerId Int
  jumlah     Int
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id])
}

model RiwayatPemesanan {
  id              Int      @id @default(autoincrement())
  transaksiId     Int?
  userId          Int?
  nama_pembeli    String
  nama_produk     String
  harga_produk    Int
  jumlah          Int      @default(1)
  total_harga     Int
  poin_dipakai    Int      @default(0)
  diskon_poin     Int      @default(0)
  harga_akhir     Int?
  bulk_payment_id String?
  status          String   @default("pending")
  tanggal         DateTime @default(now())
  createdAt       DateTime @default(now())
}
