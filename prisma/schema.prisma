model Produk {
  id        Int      @id @default(autoincrement())
  nama      String
  harga     Int
  stok      Int
  createdAt DateTime @default(now())

  transaksi Transaksi[] // relasi balik ke Transaksi
}

model Transaksi {
  id         Int      @id @default(autoincrement())
  produkId   Int
  jumlah     Int
  totalHarga Int
  createdAt  DateTime @default(now())

  produk Produk @relation(fields: [produkId], references: [id])
}
